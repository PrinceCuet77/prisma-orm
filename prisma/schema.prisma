generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique

  favoriteMovies Movie[]
  userReviews    Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Users")
}

model Movie {
  id          String   @id @default(uuid())
  name        String
  director    String
  rating      Float
  genre       String
  releaseYear DateTime

  movieReviews Review[]
  favouriteBy  User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Movies")
}

model Review {
  id   String @id @default(uuid())
  text String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User?   @relation(fields: [userId], references: [id])
  userId  String?
  movie   Movie?  @relation(fields: [movieId], references: [id])
  movieId String?

  @@map("Reviews")
}
